<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_inherit_approval" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.approval</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_approve']" position="replace">
                <field name="is_approve_visible" invisible="1"/>
                <button name="button_approve" type="object" string="Approve Order" class="oe_highlight" attrs="{'invisible': [('is_approve_visible', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>