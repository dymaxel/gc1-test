<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_pdc_payment">
        <t t-call="web.html_container">

            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <br/>
                        <br/>
                        <div class="oe_structure"/>
                        <div>
                            <h3 class="text-center mb32">
                                <strong>PDC Voucher</strong>
                            </h3>
                        </div>
                        <br/>

                        <div class="row" id="journal_information">
                            <div class="col-8">
                                <div>
                                    <strong>Voucher No :</strong>
                                    <p t-field="doc.name"/>
                                </div>

                                <div class="text-left">
                                    <strong>Payment Date :</strong>
                                    <p t-field="doc.payment_date"/>
                                </div>

                                <div class="text-left">
                                    <strong>Due Date :</strong>
                                    <p t-field="doc.due_date"/>
                                </div>
                            </div>

                            <div class="col-8">
                                <div>
                                    <strong>Journal :</strong>
                                    <p t-field="doc.journal_id"/>
                                </div>
                                <div class="text-left">
                                    <strong>Reference :</strong>
                                    <p t-field="doc.memo"/>
                                </div>
                                <div class="text-left">
                                    <strong>Cheque Ref. :</strong>
                                    <p t-field="doc.reference"/>
                                </div>
                            </div>
                        </div>


                        <br/>
                        <br/>
                        <table style="border-collapse: collapse;width: 100%;" class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Partner</th>
                                    <th>Account</th>
                                    <th>Label</th>
                                    <th>Due Date</th>
                                    <th>Analytic Account</th>
                                    <th>Taxes(%)</th>
                                    <th>Debit</th>
                                    <th>Credit</th>
                                </tr>
                            </thead>
                            <tbody class="consumed_tbody">
                                <t t-set="total" t-value="0.0"/>
                                <t t-set="total1" t-value="0.0"/>
                                <t t-foreach="doc.env['account.move.line'].search([('pdc_id', '=', doc.id)])"
                                   t-as="line">
                                    <tr>
                                        <td>
                                            <span t-field="line.partner_id"/>
                                        </td>
                                        <td>
                                            <span t-field="line.account_id"/>
                                        </td>
                                        <td>
                                            <span t-field="line.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.date_maturity"/>
                                        </td>
                                        <td>
                                            <span t-field="line.analytic_account_id"/>
                                        </td>
                                        <td>
                                            <span t-field="line.tax_ids"/>
                                        </td>
                                        <td>
                                            <span t-field="line.debit"/>
                                        </td>
                                        <td>
                                            <span t-field="line.credit"/>
                                        </td>
                                    </tr>
                                    <t t-set="total" t-value="total + line.debit"/>
                                    <t t-set="total1" t-value="total1 + line.credit"/>
                                </t>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <strong>Total:</strong>
                                    </td>
                                    <td width="10%">
                                        <strong>
                                            <span>
                                                <t t-esc="'{0:,.2f}'.format(total)"/>
                                            </span>
                                        </strong>
                                    </td>
                                    <td width="10%">
                                        <strong>
                                            <span>
                                                <t t-esc="'{0:,.2f}'.format(total1)"/>
                                            </span>
                                        </strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <record id="paperformat_pdc" model="report.paperformat">
        <field name="name">PDC</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">55</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">25</field>
        <field name="dpi">80</field>
    </record>
    <report
            id="action_report_pdc_payment"
            string="PDC Payment Report"
            model="pdc.wizard"
            report_type="qweb-pdf"
            paperformat="sh_pdc.paperformat_pdc"
            file="sh_pdc.report_pdc_payment"
            name="sh_pdc.report_pdc_payment"
    />

    <template id="report_pdc_external_layout_standard" inherit_id="web.external_layout_standard">
            <xpath expr="//div[3]/div[hasclass('text-center')]" position="before">
                <t t-if="o._name == 'pdc.wizard'">
                    <style>
                        hr {
                            border-top: 1px solid black;
                        }
                    </style>
                    <div class="row col-12">
                        <div class="col-4 text-center">
                            <span t-field="o.create_uid"/>
                            <hr/>
                            Prepared by
                        </div>
                        <div class="col-4 text-center">
                            <br/>
                            <hr/>
                            Checked by
                        </div>
                        <div class="col-4 text-center">
                            <br/>
                            <hr/>
                            Manager Finance
                        </div>
                    </div>
                    <div class="row col-12" style="margin-top: 25px;">
                        <div class="col-4 text-center">
                            <br/>
                            <hr/>
                            CFO
                        </div>
                        <div class="col-4 text-center">
                            <br/>
                            <hr/>
                            CEO
                        </div>
                        <div class="col-4 text-center">
                            <br/>
                            <hr/>
                            Received By
                        </div>
                    </div>
                </t>
            </xpath>
        </template>

</odoo>