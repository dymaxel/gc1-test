<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_backend" name="rowno_in_tree assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/serial_no_with_aggreagted_qty/static/src/scss/list_view.scss"/>
            <script type="text/javascript" src="/serial_no_with_aggreagted_qty/static/src/js/list_view.js"/>
        </xpath>
    </template>

    <record id="view_sale_order_line_inherit_serial_number" model="ir.ui.view">
        <field name="name">sale.order.line.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="sl_no" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='sequence']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='order_lines']" position="inside">
                <label for="total_product_qty" string="Total Quantity: "/>
                <field name="total_product_qty" nolabel="1"/>
            </xpath>
        </field>
    </record>

    <record id="account_move_form_serial" model="ir.ui.view">
        <field name="name">account.move.line</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="before">
                <field name="sl_no" force_save="1" invisible="1"/>
            </xpath>
            <xpath expr="//notebook//field[@name='line_ids']/tree/field[@name='product_id']" position="before">
                <field name="sl_no" force_save="1"/>
            </xpath>
            <xpath expr="//page[@id='invoice_tab']" position="inside">
                <label for="total_product_qty" string="Total Quantity: "/>
                <field name="total_product_qty" nolabel="1"/>
                <br/>
                <label for="amount_in_words" string="Total Amount in PKR Currency: "/>
                <field name="amount_in_words" nolabel="1"/>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_form_serial" model="ir.ui.view">
        <field name="name">purchase.order.line</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='sequence']" position="before">
                <field name="sl_no" force_save="1" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='products']" position="inside">
                <label for="total_product_qty" string="Total Quantity: "/>
                <field name="total_product_qty" nolabel="1"/>
            </xpath>
        </field>
    </record>

    <record id="stock_picking_view_form_serial" model="ir.ui.view">
        <field name="name">stock.picking.view.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="before">
                <field name="sl_no" force_save="1" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='operations']" position="inside">
                <label for="total_product_qty" string="Total Quantity: "/>
                <field name="total_product_qty" nolabel="1"/>
            </xpath>
        </field>
    </record>
</odoo>
