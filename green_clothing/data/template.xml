<odoo>
    <data noupdate="0">

        <!--Email template -->
        <record id="approval_cs_price_email_template" model="mail.template">
            <field name="name">Email Template</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="email_from">${(object.company_id.email |safe}</field>
            <field name="email_to" >${object.write_uid.email}</field>
            <field name="subject">${object.company_id.name} Order (Ref ${object.name or 'n/a' })</field>
            <field name="auto_delete" eval="False"/>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
                Dear ${object.write_uid.name}
                % if object.partner_id.parent_id:
                    (${object.partner_id.parent_id.name})
                % endif
                <br/><br/>
                Purchase Order Number <strong>${object.name}</strong>
                <br/>
                <p>Costing Sheet and purchase order unit prices are not same</p>
                <br/>
                 ]]>
            </field>
        </record>

    </data>
</odoo>