<?xml version="1.0"?>
<odoo>
    <record id="view_account_payment_form_inherit_dxl" model="ir.ui.view">
        <field name="name">account.payment.inherit.dxl</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page string="Bills">
                        <field name="reconcile_invoice_ids">
                            <tree editable="bottom" create="false">
                                <field name="reconcile"/>
                                <field name="invoice_id" string="Bill Number" readonly="1" force_save="1"/>
                                <field name="amount_untaxed" readonly="1" force_save="1"/>
                                <field name="amount_tax" readonly="1" force_save="1"/>
                                <field name="amount_total" readonly="1" force_save="1"/>
                                <field name="already_paid" readonly="1" force_save="1"/>
                                <field name="amount_residual" readonly="1" force_save="1"/>
                                <field name="full_wht_deduction" optional="hide"/>
                                <field name="it_wht_amount"/>
                                <field name="st_wht_amount"/>
                                <field name="amount_paid"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
    <record id="account_payment_register_view_form" model="ir.ui.view">
        <field name="name">account.payment.register.view.form.inherit</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group[2]" position="after">
                <group>
                    <field name="sales_tds_type" required="True"/>
                    <field name="sales_tds_tax_id"
                           attrs="{'invisible':[('sales_tds_type','=', 'default')],'required': [('sales_tds_type','!=','default')]}"
                           domain="[('tds','=',True), ('wht_type', '=', 'sales_tax')]"/>
                    <field name="sales_tds_amt" attrs="{'invisible':[('sales_tds_type','=', 'default')]}" readonly="1"/>
                    <field name="tds_type" required="True"/>
                    <field name="tds_tax_id"
                           attrs="{'invisible':[('tds_type','=', 'default')],'required': [('tds_type','!=','default')]}"
                           domain="[('tds','=',True), ('wht_type', '=', 'income_tax')]"/>
                    <field name="tds_amt" attrs="{'invisible':[('tds_type','=', 'default')]}" readonly="1"/>
                </group>
            </xpath>
            <xpath expr="//group" position="after">
                <notebook>
                    <page string="Bills">
                        <field name="reconcile_invoice_ids" create="false" widget="one2many">
                            <tree editable="bottom">
                                <field name="reconcile"/>
                                <field name="invoice_id" string="Bill Number" readonly="1" force_save="1"/>
                                <field name="amount_untaxed" readonly="1" force_save="1"/>
                                <field name="amount_tax" readonly="1" force_save="1"/>
                                <field name="amount_total" readonly="1" force_save="1"/>
                                <field name="already_paid" readonly="1" force_save="1" optional="hide"/>
                                <field name="amount_residual" readonly="1" force_save="1" optional="hide"/>
                                <field name="is_editable_deduction" invisible="1"/>
                                <field name="full_wht_deduction"
                                       attrs="{'readonly': [('is_editable_deduction', '=', True)]}" optional="hide"/>
                                <field name="it_wht_amount"/>
                                <field name="st_wht_amount"/>
                                <field name="amount_paid"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>

