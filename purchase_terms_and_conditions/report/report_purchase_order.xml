<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document_inherit_terms" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//div[@t-if='o.user_id']" position="replace">
            <div t-if="o.user_id" class="col-3 bm-2">
                <strong>Procurement Manager:</strong>
                <p t-field="o.user_id" class="m-0"/>
            </div>
        </xpath>
        <xpath expr="//p[@t-field='o.notes']" position="replace">
        	<a t-att-href="o.notes">Terms &amp; Conditions</a>
        </xpath>
    </template>
</odoo>
