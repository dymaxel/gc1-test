<?xml version="1.0"?>
<odoo>
    <record id="view_account_payment_form_tis_inherit" model="ir.ui.view">
        <field name="name">account.payment.form.tis</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="bill_type" widget="radio" options="{'horizontal': true}"/>
            </field>
            <xpath expr="//group[@name='group3']" position="after">
                <group name="tds_group_sales_tax">
                    <field name="sales_tds_type" attrs="{'readonly': [('state', '!=', 'draft')]}" required="True"/>
                    <field name="vendor_type" invisible="1"/>
                    <field name="sales_tds_tax_id"
                           attrs="{'invisible':[('sales_tds_type','=', 'default')],
                                'readonly': [('state', '!=', 'draft')],
                                'required': [('sales_tds_type','!=','default')]}"
                           domain="[('tds','=',True), ('wht_type', '=', 'sales_tax')]"/>
                    <field name="sales_tds_amt"
                           attrs="{'invisible':[('sales_tds_type','=', 'default')]}" readonly="1"/>
                    <field name="tds_type" attrs="{'readonly': [('state', '!=', 'draft')]}" required="True"/>
                    <field name="vendor_type" invisible="1"/>
                    <field name="tds_tax_id"
                           attrs="{'invisible':[('tds_type','=', 'default')],
                                'readonly': [('state', '!=', 'draft')],
                                'required': [('tds_type','!=','default')]}"
                           domain="[('tds','=',True), ('wht_type', '=', 'income_tax')]"/>
                    <field name="tds_amt"
                           attrs="{'invisible':[('tds_type','=', 'default')]}" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>