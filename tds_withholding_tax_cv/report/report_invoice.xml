    <template id="report_payment_receipt_document_inherit_wht" inherit_id="account.report_payment_receipt_document">
        <xpath expr="//div[@t-if='o.date']" position="before">
            <div class="col-6" t-if="o.journal_id">
                <strong>Journal Name: </strong> <span t-field="o.journal_id"/>
            </div>
        </xpath>
        <xpath expr="//span[@t-field='o.amount']" position="after">
            <br/>
            <strong>Income Tax Withhold Amount: </strong><span t-field="o.tds_amt" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/><br/>
            <strong>Sales Tax Withhold Amount: </strong><span t-field="o.sales_tds_amt" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/><br/>
            <strong>Amount Paid: </strong><span t-esc="o.amount - (o.tds_amt + o.sales_tds_amt)" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
        </xpath>
        <xpath expr="//table[hasclass('table')]" position="replace">
            <table class="table table-sm">
                    <thead>
                        <tr>
                            <th><span>Bill Number</span></th>
                            <th><span>Subtotal W/O Tax</span></th>
                            <th><span>Subtotal With Tax</span></th>
                            <th class="text-right"><span>Taxes Amount</span></th>
                            <th class="text-right"><span>IT WHT Amount</span></th>
                            <th class="text-right"><span>ST WHT Amount</span></th>
                            <th class="text-right"><span>Amount Paid</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="currency_id" t-value="request.env.company.currency_id"/>
                        <tr t-foreach="o.reconcile_invoice_ids" t-as="inv">
                            <td><span t-field="inv.invoice_id"/></td>
                            <td><span t-esc="inv.amount_untaxed"/></td>
                            <td><span t-esc="inv.amount_total"/></td>
                            <td class="text-right"><span t-esc="inv.amount_tax"/></td>
                            <td class="text-right"><span t-esc="inv.it_wht_amount"/></td>
                            <td class="text-right"><span t-esc="inv.st_wht_amount" t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></td>
                            <td class="text-right"><span t-esc="inv.amount_paid"/></td>
                        </tr>
                    </tbody>
                </table>
        </xpath>
    </template>
</odoo>