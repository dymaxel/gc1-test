<odoo>
    <data noupdate="0">

        <record id="group_trip_expense" model="res.groups">
            <field name="name">Trip Expense Field</field>
        </record>

        <record id="group_display_vehicle_pr" model="res.groups">
            <field name="name">Vehicle and Equipment Field</field>
        </record>

        <record model="ir.module.category" id="module_category_sprogroup_purchase_request">
            <field name="name">Sprogroup Purchase Request</field>
            <field name="parent_id" ref="base.module_category_inventory_purchase"/>
            <field name="sequence">10</field>
        </record>

        <record id="group_sprogroup_purchase_request_user" model="res.groups">
            <field name="name">Sprogroup Purchase Request User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="module_category_sprogroup_purchase_request"/>
        </record>

        <record id="group_sprogroup_purchase_request_manager" model="res.groups">
            <field name="name">Sprogroup Purchase Request Manager</field>
            <field name="implied_ids"
                   eval="[(4, ref('sprogroup_purchase_request.group_sprogroup_purchase_request_user'))]"/>
            <field name="category_id" ref="module_category_sprogroup_purchase_request"/>
        </record>
        <record id="purchase_request_rule_user" model="ir.rule">
            <field name="name">Rule Purchase Request User</field>
            <field name="model_id" ref="sprogroup_purchase_request.model_sprogroup_purchase_request"/>
            <field name="domain_force">['|', ('requested_by', '=', user.id), ('assigned_to', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('sprogroup_purchase_request.group_sprogroup_purchase_request_user'))]"/>
        </record>
        <record id="purchase_request_rule_manager" model="ir.rule">
            <field name="name">Rule Purchase Request Manager</field>
            <field name="model_id" ref="sprogroup_purchase_request.model_sprogroup_purchase_request"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups"
                   eval="[(4, ref('sprogroup_purchase_request.group_sprogroup_purchase_request_manager'))]"/>
        </record>
    </data>
    <data noupdate="0">

    </data>
</odoo>